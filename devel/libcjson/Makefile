PORTNAME=	libcjson
DISTVERSIONPREFIX=	v
DISTVERSION=	1.7.18
PORTREVISION=	1
CATEGORIES=	devel

MAINTAINER=	sunpoet@FreeBSD.org
COMMENT=	Ultralightweight JSON parser in ANSI C
WWW=		https://github.com/DaveGamble/cJSON

LICENSE=	MIT
LICENSE_FILE=	${WRKSRC}/LICENSE

USES=		cmake:testing pathfix
USE_LDCONFIG=	yes

USE_GITHUB=	yes
