USE_CSTD=	c89

PLIST_SUB=	DISTVERSION=${DISTVERSION}

CMAKE_TESTING_ON=	ENABLE_CJSON_TEST

CMAKE_OFF=	ENABLE_CJSON_TEST \
		ENABLE_CUSTOM_COMPILER_FLAGS
CMAKE_ON=	ENABLE_CJSON_UTILS

.include <bsd.port.mk>
